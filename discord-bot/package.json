{
  "name": "discord-bot",
  "module": "bot.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch bot.ts",
    "start": "bun bot.ts",
    "register": "bun register-commands.ts",
    "build": "bun build bot.ts --outdir ./dist --target bun",
    "type-check": "bun --bun tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@vitest/ui": "^3.1.4",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "discord.js": "^14.19.3",
    "node-cron": "^4.0.7"
  }
}